@model IEnumerable<TaskTimer.Models.Activity>
@{
    ViewBag.Title = "Index";
    var index = 0;
}

<br />
<a type="button" class="btn btn-primary btn-lg btn-block" href="@Url.Action("New")">What have you done today ?</a>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Time Spent</th>
            <th scope="col">Date</th>
            <th scope="col" class="table-light">Details</th>
            <th scope="col" class="table-light">Update</th>
            <th scope="col" class="table-dark">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(++index)</td>
                <td>@item.Description</td>
                <td>@item.Category.Name</td>
                <td>@item.TimeSpent</td>
                <td>@item.Date</td>
                <td><a href="@Url.Action("Details", "Activities", routeValues: new { id = item.Id })">Details</a></td>
                <td><a href="@Url.Action("Edit", "Activities", routeValues: new { id = item.Id })">Update</a></td>
                <td><a href="@Url.Action("Delete", "Activities", routeValues: new { id = item.Id })" onclick="return confirm('Are sure wants to delete?');">Delete</a></td>
            </tr>
        }

    </tbody>
</table> 